<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurback" >
   

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#27c4bc"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#ffcfcfcf"
        android:textSize="20sp"
        android:textStyle="bold" />


    
    
    <TextView
        android:id="@+id/text_psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:text="密码:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_psd"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:text="商城账号:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_user"
        android:layout_alignBottom="@+id/text_user"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/text_user"
        android:ems="10"
        android:hint="请输入用户名" />

    <EditText
        android:id="@+id/edit_psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_psd"
        android:layout_alignBottom="@+id/text_psd"
        android:layout_alignLeft="@+id/edit_user"
        android:hint="请输入密码"
        android:password="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_psd"
        android:layout_below="@+id/edit_psd"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="120dp"
        android:text="是否记住密码" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/checkBox1"
         android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" 
        android:text="登录"   
        android:background="@drawable/shapepink" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox1"
        android:layout_alignBottom="@+id/checkBox1" 
        android:layout_marginLeft="70dp"      
        android:text="自动登陆" />

    <Button
        android:id="@+id/mall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_signup"
        android:layout_alignBottom="@+id/btn_signup"
        android:layout_alignParentRight="true"
        android:background="@drawable/shapepink"
        android:text="充值" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_login"
        android:layout_alignBottom="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapepink"
        android:text="注册" />
    
    
    <RelativeLayout
        android:id="@+id/ralativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
         >
  <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="注意：登录账号与商城账号一致"
        android:textSize="18sp" />

    </RelativeLayout>
    

</RelativeLayout>
